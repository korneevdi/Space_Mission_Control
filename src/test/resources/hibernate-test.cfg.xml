<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- H2 in-memory -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">
            jdbc:h2:mem:testdb;MODE=PostgreSQL;DB_CLOSE_DELAY=-1
        </property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">as</property>

        <!-- PostgreSQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Schema lifecycle -->
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <!-- SQL -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Entities -->
        <mapping class="spacemissioncontrol.entity.Mission"/>
        <mapping class="spacemissioncontrol.entity.MissionDetails"/>
        <mapping class="spacemissioncontrol.entity.Astronaut"/>
        <mapping class="spacemissioncontrol.entity.Equipment"/>
        <mapping class="spacemissioncontrol.entity.Spaceship"/>

    </session-factory>
</hibernate-configuration>
